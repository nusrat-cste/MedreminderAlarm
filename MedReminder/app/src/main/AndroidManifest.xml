<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nusra.medreminder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_med"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_med"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddAMedicineAlarm" />
        <activity android:name=".AddAMedicineInfo" />

        <receiver android:name=".Alarm_Receiver" />

        <service
            android:name=".RingtonePlayingService"
            android:enabled="true" />

        <activity android:name=".EditAnAlarmActivity"></activity>
    </application>

</manifest>